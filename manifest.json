{
  "name": "NBA game alert",
  "version": "1.5.4",
  "description": "Chrome extension for NBA fans to be notified of their favorite teams and scores!",
  "permissions": ["declarativeContent","storage","http://data.nba.net/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}